    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Owner",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nguyen Van Owner\",\n  \"email\": \"owner@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\",\n  \"phone\": \"0901234567\",\n  \"address\": \"123 Nguyen Hue, Q1\",\n  \"country_id\": 1\n}"
            },
            "url": "{{base_url}}/api/auth/owner/register",
            "description": "Đăng ký chủ nhà hàng. Response có access_token trong data."
          }
        },
        {
          "name": "Owner Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.data && json.data.access_token) { pm.collectionVariables.set('token', json.data.access_token); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{owner_email}}\",\n  \"password\": \"{{owner_password}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/owner/login",
            "description": "Đăng nhập owner. Dùng user từ AdminUserSeeder (owner@foodshop.com / owner123). Token tự lưu vào biến token."
